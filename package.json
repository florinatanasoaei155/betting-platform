{
  "name": "betting-platform",
  "version": "1.0.0",
  "description": "Mock sports betting platform with microservices architecture",
  "private": true,
  "workspaces": [
    "frontend",
    "backend/shared",
    "backend/api-gateway",
    "backend/user-service",
    "backend/wallet-service",
    "backend/bet-service",
    "backend/odds-service",
    "backend/event-service"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev -w frontend",
    "dev:backend": "concurrently \"npm run dev -w api-gateway\" \"npm run dev -w user-service\" \"npm run dev -w wallet-service\" \"npm run dev -w bet-service\" \"npm run dev -w odds-service\" \"npm run dev -w event-service\"",
    "build": "npm run build -ws",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:seed": "npx ts-node backend/database/seed.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "uuid": "^9.0.0"
  }
}
